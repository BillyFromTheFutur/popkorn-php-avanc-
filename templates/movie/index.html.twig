{% extends 'base.html.twig' %}

{% block title %}Movie index{% endblock %}

{% block body %}
    <h1>Pop Korn</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Note</th>
                <th>Nombre de votants</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.name }}</td>
                <td>{{ movie.description }}</td>
                <td>{{ movie.score }}</td>
                <td>{{ movie.votersNumber }}</td>
                <td>
                    <a href="{{ path('movie_show', {'id': movie.id}) }}">montrer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de films disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('movie_new') }}">Ajouter un film</a>
    <a href="{{ path('movie_import') }}">Importer un fichier XLS</a>
{% endblock %}
